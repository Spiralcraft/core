<project name="spiralcraft-core-shell" basedir="." default="test">

  <macrodef name="spiralcraft">
    <attribute name="assy"/>
    <sequential>
      <java
        jar="../../../build/lib/spiralcraft.jar"
        failonerror="true"
        fork="true"
        >
        <arg value="-codebase"/>
        <arg value=".."/>
        <arg value="exec"/>
       
        <arg value="@{assy}"/>
      </java>
    </sequential>
  </macrodef>
    	
  <target name="test" >
    <spiralcraft assy="class:/spiralcraft/task/test/Test.assy"/>
    <spiralcraft 
      assy="class:/spiralcraft/io/test/RotatingFileOutputAgent.test.assy"
    />

  </target>
</project>
