<project name="spiralcraft-core-smoke" basedir="." default="smoke">
    
  <import file="build.xml"/>
  
	
  <target name="smoke" >
    <java
      jar="../../build/lib/spiralcraft.jar"
      failonerror="true"
      fork="true"
      >
      <arg value="-codebase"/>
      <arg value="."/>
      <arg value="exec"/>
   
      <arg value="class:/spiralcraft/task/test/Test.assy"/>
    </java>

  </target>
</project>
