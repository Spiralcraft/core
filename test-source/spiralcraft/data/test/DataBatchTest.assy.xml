<task:Scenario
  xmlns:task="class:/spiralcraft/task/"
  xmlns:query="class:/spiralcraft/data/query/"
  xmlns:dtask="class:/spiralcraft/data/task/"
  xmlns:test="class:/spiralcraft/test/"
  xmlns:example="class:/spiralcraft/data/test/example/"
  >
  <chain>
    <task:Session>
      <type x="[@example:BatchSession].type"/>
    </task:Session>
    
    <dtask:Collector>
    
      <x>[example:BatchSession].results
      </x>
          
      <logTaskResults>false
      </logTaskResults>

    </dtask:Collector>
    
    <query:QueryScenario>
          
      <query>
        <query:Scan>
          <type x="[@example:Customer].type"/>
        </query:Scan>
      </query>
    </query:QueryScenario>
    
    <task:Sequence>
      <scenarios>
        <task:Batch>
          <source>[example:Customer.list]
          </source>
                      
          <chain>
            <task:Commander>
              <commandX>[dtask:Collector] commandAdd([example:Customer])
              </commandX>
            </task:Commander>
          </chain>
        </task:Batch>
        
        <task:Batch>
          <source>[example:Customer.list]
          </source>

          <parallel>true
          </parallel>
                      
          <chain>
            <task:Commander>
              <commandX>[dtask:Collector] commandAdd([example:Customer])
              </commandX>
            </task:Commander>
          </chain>
        </task:Batch>
      </scenarios>
    </task:Sequence>

    <test:Stub>
      <messageX>""+[example:BatchSession].results+" results"
      </messageX>
    </test:Stub>
 
  </chain>
        
</task:Scenario>
