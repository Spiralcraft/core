<?xml version="1.0" encoding="UTF-8"?>

<meta:Type
  xmlns:meta="class:/spiralcraft/data/types/meta/"
  xmlns:example="class:/spiralcraft/data/test/example"
  xmlns:j="class:/java/lang/"
  
  xmlns:dtask="class:/spiralcraft/data/task/"
  xmlns:st="class:/spiralcraft/time/"
  >
  <archetype><example:Contact.type/>
  </archetype>
  

  <fields>
    <meta:SequenceField>

      <name>id
      </name>

      <type><Integer.type/>
      </type>
          
      
    </meta:SequenceField>
        
    <meta:Field>
        
      <name>active
      </name>
        	
      <type><Boolean.type/>
      </type>
        	
    </meta:Field>
        
    <meta:Field>
        
      <name>lastContact
      </name>
                
      <type><Instant.type/>
      </type>
                
    </meta:Field>
            
    <meta:Field>

      <name>paymentTerms
      </name>

      <type>
        <String.type>
          	
          <maxLength>32
          </maxLength>
              
        </String.type>
      </type>

    </meta:Field>
        
    <meta:Field>
        
      <name>score
      </name>
        
      <type>
        <Float.type/>
      </type>
    </meta:Field>
    
    <meta:CalculatedField>
        
      <name>computedScore
      </name>
        
      <type>
        <Float.type/>
      </type>
      
      <expression>score*10.0F
      </expression>
    </meta:CalculatedField>
    
    <meta:Field>
        
      <name>discountCodes
      </name>
        
      <type>
        <String.array.type/>
      </type>
      
    </meta:Field>    
    
    <meta:Field>
        
      <name>notes
      </name>
        
      <type>
        <String.type/>
      </type>
      
    </meta:Field>        
  </fields>
      
  <keys>
    <meta:Key>

      <fieldList>id
      </fieldList>
      		
      <primary>true
      </primary>
      		
    </meta:Key>

    <meta:Key>
      <name>facts
      </name>

      <fieldList>id
      </fieldList>

      <foreignType><example:Fact.type/>
      </foreignType>
      
      <importedKey>
        <meta:Key>
          <fieldList>customerId
          </fieldList>
        
        </meta:Key>
      </importedKey>
                
    </meta:Key>
  </keys>
      
  <methods>
    <meta:TaskMethod>
      <name>score1
      </name>
    </meta:TaskMethod>
    
    <meta:TaskMethod>
      <name>score
      </name>
      <parameterTypes>
        <Integer.type/>
      </parameterTypes>
      
    </meta:TaskMethod>
    
    <meta:Method>
      <name>score2</name>
      
      <parameterTypes>
        <Integer.type/>
      </parameterTypes>
      
      <returnType>
        <Float.type/>
      </returnType>
      
      <contextX>{ score:[@j:Integer] }
      </contextX>
          
      <x>..score=..score+.score
      </x>
          
    </meta:Method>
    
    <meta:Method>
      <name>fetch</name>
      
      <static>true
      </static>
      
      <parameterTypes>
        <Integer.type/>
      </parameterTypes>
      
      <returnType>
        <example:Customer.type/>
      </returnType>
      
      <contextX>{ id:[@j:Integer] }
      </contextX>
          
      <x>[*dtask:Fetch{[@example:Customer],[{`id:=id`}]}].()
      </x>
          
    </meta:Method>
    
    <meta:TaskMethod>
      <name>addFact
      </name>
      
      <parameterTypes>
        <String.type/>
      </parameterTypes>
      
      <returnType>
        <example:Fact.type/>
      </returnType>
      
    </meta:TaskMethod>
    
    <meta:Method>
      <name>testMethod
      </name>
      <static>true
      </static>
      <parameterTypes>
        <String.type/>
        <String.type/>
      </parameterTypes>
      <contextX>{ string1:[@j:String], string2:[@j:String] }
      </contextX>
      
      <returnType>
        <String.type/>
      </returnType>
      
      <x>string1+string2
      </x>
    </meta:Method>

    <meta:TaskMethod>
      <name>testResultX
      </name>
      
      <parameterTypes>
        <String.type/>
      </parameterTypes>
      
      <returnType>
        <String.type/>
      </returnType>
      
    </meta:TaskMethod>
    
    <meta:TransactionMethod>
      <name>updateLastContact
      </name>
      <parameterTypes>
        <Instant.type/>
      </parameterTypes>
      <returnType>
        <Void.type/>
      </returnType>
      <debug>true
      </debug>
      <contextX>
        [#p] { newInstant:[@st:Instant]
        }
      </contextX>
      <x>
        [example:Customer]
        .[*dtask:Edit{ forceSave:=true, preSave:=`.lastContact=[p].newInstant` }]
        .().@log("updateLastContact: Edited "+.)
      </x>
    </meta:TransactionMethod>

    <meta:TransactionMethod>
      <name>updateLastContactWithReturn
      </name>
      <parameterTypes>
        <Instant.type/>
      </parameterTypes>
      <returnType>
        <st:Instant.type/>
      </returnType>
      <debug>true
      </debug>
      <contextX>
        [#p] { newInstant:[@st:Instant]
        }
      </contextX>
      <x>
        [example:Customer]
        .[*dtask:Edit{ forceSave:=true, preSave:=`.lastContact=[p].newInstant` }]
        .().@log("updateLastContact: Edited "+.).lastContact
      </x>
    </meta:TransactionMethod>
  </methods>

</meta:Type>