<project name="spiralcraft-core" default="build" basedir=".">


  <target name="build">
    <javac 
      srcdir="source" 
      classpath="${spiralcraft-main.jar}"
      debug="on"
    />
  </target>

  <target name="jar" depends="build">
    <jar 
      destfile="../../lib/spiralcraft-core.jar" 
      basedir="source"
      includes="spiralcraft/**/*.class,spiralcraft/**/*.xml"
      >
    </jar>
  </target>

</project>
